@{
  Layout = "_Layout";
}

@using Registrar.Models
<div class="courses w-75">
@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 
<ul class="list-group">
@foreach (Course course in Model)
{
  <li class="list-group-item">@Html.ActionLink($"{course.Number}: {course.Name}", "Details", new { id = course.CourseId })</li>
}
</ul>
</div>