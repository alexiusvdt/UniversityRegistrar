@{
  Layout = "_Layout";
}

@using Registrar.Models;

@if (@Model.Count == 0)
{
  <h3>No departments have been added yet!</h3>
} 

<div id="list">
  @foreach(Department department in Model)
  {
    <div class="card">
      <div class="card-body">
        @Html.ActionLink($"{department.Name}", "Details", new { id = department.DepartmentId })
      </div>
    </div>
  }
</div>

<p>@Html.ActionLink("Add new department", "Create")</p>
<p>@Html.ActionLink("Add new course", "Create", "Courses")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>