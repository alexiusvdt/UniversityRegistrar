@{
  Layout = "_Layout";
}

@model Registrar.Models.Student
<div class="d-flex align-items-center flex-column text-center">
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Admission)
  @Html.TextBoxFor(model => model.Admission, new {@type = "date"})
  
  @* @Html.Label("Select course")
  @Html.CheckBoxFor("CourseId") *@
  <p><input type="submit" value="Add new student" /></p>
}

@Html.ActionLink("Show all students", "Index")
</div>