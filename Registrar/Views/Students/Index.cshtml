@{
  Layout = "_Layout";
}

@using Registrar.Models;
<div class="courses">
@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 
else
{
  <ul class="list-group">
    @foreach (Student student in Model)
    {
      <li class="list-group-item">@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
    }
  </ul>
}
<br>
<p class="text-center">@Html.ActionLink("Add new student", "Create")</p>
</div>